<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".LogHistory">

    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar_log_history"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="15dp"
        app:cardCornerRadius="15dp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Equipment Details"
                android:padding="20dp"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/sans"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/id_card"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_log_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_log_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="id"
                android:padding="15dp"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/sans"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1_log"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/id_card"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:padding="10dp"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.5"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:id="@+id/name_log_history_1"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sans"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:text="Name"
                    android:textSize="18sp"
                    android:padding="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/doi_log_history_1"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sans"
                    android:text="Installed on"
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:paddingStart="10dp"
                    app:layout_constraintTop_toBottomOf="@id/name_log_history_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lro_log_history_1"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sans"
                    android:textSize="18sp"
                    android:text="Repaired on"
                    android:padding="2dp"
                    android:paddingStart="10dp"
                    app:layout_constraintTop_toBottomOf="@id/doi_log_history_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/nu_log_history_1"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sans"
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Next repair on"
                    app:layout_constraintTop_toBottomOf="@id/lro_log_history_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content" />
            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/name_log_history"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sans"
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/doi_log_history"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sans"
                    android:textSize="18sp"
                    android:padding="2dp"
                    app:layout_constraintTop_toBottomOf="@id/name_log_history"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lro_log_history"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sans"
                    android:textSize="18sp"
                    android:padding="2dp"
                    app:layout_constraintTop_toBottomOf="@id/doi_log_history"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/nu_log_history"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sans"
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lro_log_history"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/card1_log"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:padding="10dp"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/history_logs"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="History"
                android:padding="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/sans"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_log"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/history_logs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:id="@+id/updatelogs_log_history"
            android:text="Update Logbook"
            android:height="70dp"
            android:background="@color/white"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>